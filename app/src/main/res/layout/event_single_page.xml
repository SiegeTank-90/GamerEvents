<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_on_primary"
    tools:context=".event_single_page">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="729dp"
        android:padding="16dp"
        tools:layout_editor_absoluteY="1dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="12dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="250dp"
            android:background="@android:color/transparent"
            app:cardBackgroundColor="@color/design_default_color_on_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <TextView
                    android:id="@+id/CardTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Warhammer 40K Open Play"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/CardImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/CardImage"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    app:layout_constraintTop_toBottomOf="@id/CardTitle"
                    tools:srcCompat="@tools:sample/avatars" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/event_desc"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="75dp"
            android:background="@color/design_default_color_on_secondary"
            android:padding="8dp"
            android:text="@string/lorem_Ipsum_Short"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2" />

        <LinearLayout
            android:id="@+id/Layout_Contraint"
            android:layout_width="205dp"
            android:layout_height="229dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="85dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp"
            app:flow_verticalAlign="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/event_desc">

            <TextView
                android:id="@+id/event_startTime_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_startTime_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="7/21/2024 7PM"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/event_location_title"
                android:layout_width="74dp"
                android:layout_height="17dp"
                android:text="Location"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_location_desc"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="123 Downing Street"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/event_gameName_title"
                android:layout_width="117dp"
                android:layout_height="18dp"
                android:text="Game"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_gameName_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Warhammer 40k" />

            <TextView
                android:id="@+id/event_attendence_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attendence"
                android:textAlignment="center"
                tools:textStyle="bold" />

            <TextView
                android:id="@+id/event_attendence_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5/8"
                android:textAlignment="center" />
        </LinearLayout>

        <Button
            android:id="@+id/reserve_place_button"
            android:layout_width="125dp"
            android:layout_height="43dp"
            android:layout_margin="24dp"
            android:layout_marginTop="24dp"
            android:background="#A0F29A"
            android:backgroundTint="@color/design_default_color_on_primary"
            android:text="Reserve"
            android:textColor="@color/white"
            android:textColorHighlight="@color/design_default_color_on_primary"
            android:textColorHint="@color/design_default_color_on_primary"
            android:textColorLink="@color/design_default_color_on_primary"
            app:iconTint="@color/design_default_color_on_primary"
            app:layout_constraintTop_toBottomOf="@+id/Layout_Contraint"
            app:rippleColor="@color/design_default_color_on_primary"
            tools:layout_editor_absoluteX="118dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>